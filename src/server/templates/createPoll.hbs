<div>
  <form action="/api/createpoll" method="post">
    <div>
      <label for="title">Title</label>
      <input type="text" name='title' id="title" required />
    </div>
    <div id="itemContainer">
      <div class="item">
        <label for="item1">Item #1</label>
        <input type="text" name='item1' id="item1" required />
      </div>
      <div class="item">
        <label for="item2">Item #2</label>
        <input type="text" name='item2' id="item2" required />
      </div>
    </div>
    <div>
      <button type="button" id="addItem">+</button>
      <button type="button" id="removeItem">-</button>
    </div>
    <div>
      <button type="submit">Create</button>
    </div>
  </form>
</div>

<script src="/js/createPoll.js" defer></script>