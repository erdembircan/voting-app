<div class="indexWrapper">
  <div class="pollPreview">
    <form action="/api/createpoll" method="post">
      <div class="item">
        <label for="title">Title</label>
        <input type="text" name='title' id="title" required />
      </div>
      <div id="itemContainer">
        <div class="item">
          <label for="item1">Item #1</label>
          <input type="text" name='item1' id="item1" required />
        </div>
        <div class="item">
          <label for="item2">Item #2</label>
          <input type="text" name='item2' id="item2" required />
        </div>
      </div>
      <div class="formButtonContainer">
        <div>
          <button type="button" id="addItem" class="button">+</button>
          <button type="button" id="removeItem" class="button">-</button>
        </div>
        <div>
          <button type="submit" class="button">Create</button>
        </div>


      </div>
    </form>



  </div>
</div>

<script src="/js/createPoll.js" defer></script>